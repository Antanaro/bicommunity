{
  "name": "forum-backend",
  "version": "1.0.0",
  "description": "Backend API для форума",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "node src/migrations/migrate.js",
    "check-db": "node src/scripts/check-db.js",
    "create-db": "node src/scripts/create-database.js",
    "check-config": "node -e \"require('dotenv').config(); console.log('PORT:', process.env.PORT); console.log('JWT_SECRET:', process.env.JWT_SECRET ? 'Set' : 'NOT SET!'); console.log('DB:', process.env.DB_NAME);\"",
    "test-register": "node src/scripts/test-registration.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.9",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2"
  }
}
